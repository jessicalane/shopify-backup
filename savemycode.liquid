{% assign collection = collections[block.settings.page_collection] %}
{% assign products = collection.products %}
{% assign products_per_row = block.settings.page_products_per_row %}


<div class="container">
  <div class="section clearfix">
    {% if sidebar %}
      {% include 'sidebar', featured: true, featured_collection: block.settings.page_collection %}
      <div class="twelve columns">
    {% else %}
      <div class="sixteen columns">
    {% endif %}
      {% if block.settings.title != blank %}
        <h2 class="section-header title">
          <a href="{{ collection.url }}">{{ block.settings.title | escape }}</a>
        </h2>
        {% if collections[block.settings.page_collection] != blank %}
          <div class="section clearfix">
            {{ collections[block.settings.page_collection].description }}
          </div>
        {% endif %}
      {% endif %}

      {% if products.length > 0 %}
        {% assign limit = block.settings.page_products_limit | plus: 1 %}
        {% include 'product-loop', sidebar: sidebar, limit: limit, products_per_row: products_per_row %}
      {% else %}
        {% assign limit = block.settings.page_products_limit %}
        <div class="featured-collection--placeholder clearfix">
          {% for i in (1..limit) %}
          <div class="limit"> {{ block.settings.page_products_limit }}</div>
          <div class="limit">{{ limit }}</div>
            <div class="
              {% if sidebar %}
                sidebar-enabled
                {% if products_per_row == 2 %} six columns
                {% elsif products_per_row == 3 %} four columns
                {% elsif products_per_row == 4 %} three columns
                {% endif %}
              {% else %}
                sidebar-disabled
                {% if products_per_row == 2 %} eight columns
                {% elsif products_per_row == 3 %} one-third column
                {% elsif products_per_row == 4 %} four columns
                {% endif %}
              {% endif %}

              thumbnail">
              <a href="#" itemprop="url">
                <div class="relative product_image">
                  {% capture num %}{% cycle "1", "2", "3", "5", "6" %}{% endcapture %}
                  {{ 'collection-' | append: num | placeholder_svg_tag: 'placeholder-svg placeholder-svg--product' }}
                </div>
                <div class="info">
                  <span class="title">{{ 'homepage.onboarding.product_title' | t }}</span>
                    <span class="price">
                    <span class="money">$49.60</span>
                  </span>
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>