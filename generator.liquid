<div>
    {% for block in section.blocks %}
    <div class="grid-item" {{ block.shopify_attributes }}>
        {% case block.type %}
            {% when 'gallery' %}
                {% include 'snippet_gallery' %}
            {% when 'content-page' %}
                {% include 'snippet_page' %}
            {% when 'banner' %}
                {% include 'snippet_banner' %}
            {% when 'divider' %}
                {% include 'snippet_divider' %}
            {% when 'image-with-text' %}
                {% include 'snippet_image-with-text' %}
            {% when 'image-with-text-overlay' %}
                {% include 'snippet_image-with-text-overlay' %}
            {% when 'slideshow' %}
                {% include 'snippet_slideshow' %}
            {% when 'featured-product' %}
                {% include 'snippet_featured-product' %}
            {% when 'collection-list' %}
                {% include 'snippet_collection-list' %}
            {% when 'featured-collection' %}
                {% include 'snippet_featured-collection' %}
            {% when 'text-banner' %}
                {% include 'snippet_text-banner' %}
            {% when 'page-text' %}
                {% include 'snippet_rich-text' %}
            {% when 'featured-promotions' %}
                {% include 'snippet_featured-promotions' %}
            
            
        {% endcase %}
    </div>    
    {% endfor %}
